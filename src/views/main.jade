
body
    nav.teal
      .nav-wrapper
        a.brand-logo(href='play') PlayMyWay
          span.song-title {{currSong._name}}
        ul#nav-mobile.right.hide-on-med-and-down
          li
            a(ui-sref='admin') Admin

.container
  .row
    .col.s10.offset-s1
      div(ng-repeat="song in songs")
        .vote-count
          .purple-text.text-lighten-1
            {{song.votes || 0}}
        .song-card
          .card-panel.blue
            .white-text
              {{song.name}}
        .vote-btn
          a.btn-floating.btn-large.waves-effect.waves-light.purple.lighten-1(ng-click="pushVoted(song)")
            i.material-icons present_to_all

